<%= link_to 'new', new_category_path, class: 'btn btn-sm btn-success' %>
<h1>Category List</h1>

<table class="table table-success table-striped">
  <thead>
  <td>Name</td>
  <td>ACTION</td>
  </thead>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to :edit, edit_category_path(category), class: 'btn btn-sm btn-warning' %>
        <%= button_to :delete, category_path(category), method: :delete, class: 'btn btn-sm btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>


