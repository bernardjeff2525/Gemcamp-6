<h1>Post List</h1>

<table class="table table-success table-striped">
  <thead>
  <td>TITLE</td>
  <td>CREATION TIME</td>
  <td>CATEGORIES</td>
  <td>ACTION</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.created_at %></td>
      <td><%= post.categories.pluck(:name).join(',') %></td>
      <td>
        <%= link_to 'DETAIL', post_path(post), class: 'btn btn-sm btn-primary' %>
        <%= link_to 'EDIT', edit_post_path(post), class: 'btn btn-sm btn-warning' %>
        <%= button_to 'Delete', post_path(post), class: 'btn btn-sm btn-danger', method: :delete %>
        <%= link_to 'Comments', post_comments_path(post), class: 'btn btn-sm btn-primary' %>
        <%= link_to 'New Comment', new_post_comment_path(post), class: 'btn btn-sm btn-success' %>
      </td>
    </tr>
  <% end %>
</table>